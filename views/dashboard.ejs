<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat App - Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="bg-primary text-white py-2 mb-4">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
          <i class="fas fa-comments"></i> Chat App
        </a>
        <div class="ml-auto d-flex align-items-center">
          <span class="mr-3"><%= user.username %></span> <!-- Display username dynamically -->
          <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
        </div>
      </nav>
    </div>
  </header>

  <main class="container">
    <div class="row">
      <!-- Search Users Section -->
      <div class="col-md-4 mb-4">
        <h3>Search Users</h3>
        <form id="searchForm">
          <div class="input-group">
            <input type="text" class="form-control" id="searchInput" placeholder="Search for users...">
            <div class="input-group-append">
              <button class="btn btn-outline-primary" type="button" id="search-button">Search</button>
            </div>
          </div>
        </form>
        <ul id="searchResults" class="list-group mt-2"></ul>
      </div>

      <!-- Incoming Friend Requests Section -->
      <div class="col-md-4 mb-4">
        <h3>Incoming Friend Requests</h3>
        <ul id="incomingRequests" class="list-group">
          <!-- Incoming requests will be dynamically populated here -->
        </ul>
      </div>

      <!-- Friends List Section -->
      <div class="col-md-4 mb-4">
        <h3>Your Friends</h3>
        <ul id="friendsList" class="list-group">
          <!-- Friend list will be dynamically populated here -->
        </ul>
      </div>
    </div>
  </main>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="/js/dashboard.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat App - Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header class="bg-primary text-white py-2 mb-4">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
          <i class="fas fa-comments"></i> Chat App
        </a>
        <div class="ml-auto d-flex align-items-center">
          <span class="mr-3 bg-primary btn-outline-light"><%= user.username %></span> <!-- Display username -->
          <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
        </div>
      </nav>
    </div>
  </header>

  <main class="container">
    <div class="row">
      <!-- Search Users Section -->
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5>Search Users</h5>
          </div>
          <div class="card-body">
            <div class="input-group mb-3">
              <input id="user-search-input" type="text" class="form-control search-input" placeholder="Search users by username..." aria-label="Search">
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="search-button">Search</button>
              </div>
            </div>
            <div class="search-results">
              <!-- Dynamically generated search results will be inserted here -->
            </div>
          </div>
        </div>
      </div>

      <!-- Incoming Friend Requests Section -->
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5>Incoming Friend Requests</h5>
          </div>
          <div class="card-body">
            <ul class="list-group" id="incoming-requests">
              <!-- Dynamically generated incoming friend requests will be inserted here -->
            </ul>
          </div>
        </div>
        
        <!-- Outgoing Friend Requests Section -->
        <div class="card mt-3">
          <div class="card-header">
            <h5>Outgoing Friend Requests</h5>
          </div>
          <div class="card-body">
            <ul class="list-group" id="outgoing-requests">
              <!-- Dynamically generated outgoing friend requests will be inserted here -->
            </ul>
          </div>
        </div>
      </div>

      <!-- Online Friends Section -->
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5>Online Friends</h5>
          </div>
          <div class="card-body">
            <ul class="list-group" id="online-friends">
              <!-- Dynamically generated online friends will be inserted here -->
            </ul>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="/js/dashboard.js"></script>
</body>
</html>

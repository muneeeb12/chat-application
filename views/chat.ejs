<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat - <%= user.username %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    #chatContainer {
      display: flex;
      height: 70vh; /* Reduced height */
    }
    #onlineFriends {
      width: 25%;
      background-color: #343a40;
      color: white;
      padding: 10px; /* Reduced padding */
      overflow-y: auto;
    }
    #searchBox {
      background-color: #495057;
      border: none;
      border-radius: 25px;
      padding: 10px 15px;
      color: white;
      margin-bottom: 15px;
    }
    #chatMessages {
      width: 50%;
      background-color: white;
      padding: 10px; /* Reduced padding */
      border-left: 1px solid #dee2e6;
      overflow-y: auto;
      position: relative; /* Allow positioning of input inside */
    }
    #usernameDisplay {
      font-weight: bold;
      margin-bottom: 10px;
      color: #495057;
    }
    #chatHeader {
      font-weight: bold;
      margin-bottom: 10px;
      color: #495057;
    }
    #messageInputContainer {
      display: flex;
      align-items: center;
      padding: 10px;
      background-color: #f1f1f1; /* Input bar background */
      border-top: 1px solid #dee2e6;
      position: absolute; /* Position it at the bottom */
      bottom: 0;
      left: 0;
      right: 0;
    }
    #messageInput {
      flex: 1;
      border: none;
      border-radius: 25px;
      padding: 10px 15px;
      margin-right: 10px; /* This can be removed if using ml-2 on the button */
    }
    .btn-primary {
      border-radius: 50%; /* Make the button circular */
      width: 40px; /* Set a fixed width */
      height: 40px; /* Set a fixed height */
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .message {
      margin-bottom: 10px;
    }
    .message.sent {
      text-align: right;
    }
    .message.received {
      text-align: left;
    }
  </style>
</head>
<body>
  <header class="bg-primary text-white py-2 mb-4">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
          <i class="fas fa-comments"></i> Chat App
        </a>
        <div class="ml-auto d-flex align-items-center">
          <span class="mr-3"><%= user.username %></span>
          <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
        </div>
      </nav>
    </div>
  </header>

  <main class="container-fluid">
    <div id="chatContainer">
      <!-- Online Friends -->
      <div id="onlineFriends" class="d-flex flex-column">
        <input type="text" id="searchBox" placeholder="Search..." class="form-control">
        <h4>Online Friends</h4>
        <ul id="onlineFriendsList" class="list-group">
          <!-- Online friends will be dynamically populated here -->
        </ul>
      </div>

      <!-- Chat Messages -->
      <div id="chatMessages" class="border p-3">
        <div id="chatHeader"></div> <!-- Chat header for friend's name -->
        <!-- Chat messages will be dynamically populated here -->
        
        <!-- Message Input -->
        <div id="messageInputContainer">
          <form id="messageForm" class="w-100 d-flex">
            <input type="text" class="form-control" id="messageInput" placeholder="Type your message..." aria-label="Message input">
            <button class="btn btn-primary ml-2" type="submit" aria-label="Send message">
              <i class="fas fa-paper-plane"></i> <!-- Font Awesome arrow icon -->
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const loggedInUserId = '<%= user._id %>'; // Pass user ID to JavaScript
  </script>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</body>
</html>

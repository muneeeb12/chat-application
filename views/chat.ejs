<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat - <%= user.username %></title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="/css/chatstyles.css"> <!-- Link to the new styles.css -->
</head>
<body>
  <header class="bg-primary text-white py-2 mb-4">
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/">
          <i class="fas fa-comments"></i> Chat App
        </a>
        <div class="ml-auto d-flex align-items-center">
          <span class="mr-3"><%= user.username %></span> <!-- Display username dynamically -->
          <a href="/auth/logout" class="btn btn-outline-light">Logout</a>
        </div>
      </nav>
    </div>
  </header>

  <main class="container-fluid">
    <div id="chatContainer">
      <!-- Online Friends -->
      <div id="onlineFriends" class="d-flex flex-column">
        <input type="text" id="searchBox" placeholder="Search..." class="form-control">
        <h4>Online Friends</h4>
        <ul id="onlineFriendsList" class="list-group">
          <!-- Online friends will be dynamically populated here -->
        </ul>
      </div>

      <!-- Chat Messages -->
      <div id="chatMessages" class="border p-3">
        <div id="chatHeader"></div> <!-- Chat header for friend's name -->
        <!-- Chat messages will be dynamically populated here -->
        
        <!-- Message Input -->
        <div id="messageInputContainer">
          <form id="messageForm" class="w-100 d-flex">
            <input type="text" class="form-control" id="messageInput" placeholder="Type your message..." aria-label="Message input">
            <button class="btn btn-primary ml-2" type="submit" aria-label="Send message">
              <i class="fas fa-paper-plane"></i> <!-- Font Awesome arrow icon -->
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const loggedInUserId = '<%= user._id %>'; // Pass user ID to JavaScript
  </script>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</body>
</html>
